<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/btn_floating"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="24dp"
        android:clickable="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:srcCompat="@android:drawable/ic_media_play" />

    <ImageView
        android:id="@+id/icon_title"
        android:layout_width="185dp"
        android:layout_height="59dp"
        android:layout_marginTop="30dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.07"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0"
        app:srcCompat="@drawable/logo2" />


    <ImageView
        android:id="@+id/img_login_main"
        android:layout_width="48dp"
        android:layout_height="60dp"
        android:layout_marginTop="16dp"
        app:layout_constraintBottom_toBottomOf="@+id/icon_title"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.893"
        app:layout_constraintStart_toEndOf="@+id/login_check"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0"
        app:srcCompat="@drawable/icon_person2" />

    <TextView
        android:id="@+id/login_check"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:text="@string/str_login"
        android:textAlignment="viewEnd"
        android:textColor="@color/neon"
        app:layout_constraintBottom_toBottomOf="@+id/icon_title"
        app:layout_constraintEnd_toStartOf="@+id/img_login_main"
        app:layout_constraintHorizontal_bias="0.444"
        app:layout_constraintStart_toEndOf="@+id/icon_title"
        app:layout_constraintTop_toTopOf="@+id/img_login_main"
        app:layout_constraintVertical_bias="0.578" />

    <View
        android:id="@+id/view_title_guideline"
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:background="@color/neonpurple"
        app:layout_constraintTop_toBottomOf="@id/img_login_main"/>


    <HorizontalScrollView
        android:id="@+id/icHScrollView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/view_title_guideline"
        app:layout_constraintVertical_weight="1"
        android:scrollbarThumbHorizontal="@color/neonpurple"
        android:scrollbarFadeDuration="0"
        android:scrollbarSize="5dp"
        android:background="@color/alpha_hotpink"
        >

        <LinearLayout
            android:id="@+id/horizontal_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="8dp"
            android:orientation="horizontal">

        </LinearLayout>
    </HorizontalScrollView>

    <androidx.core.widget.NestedScrollView
        android:id="@+id/contentScrollView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/icHScrollView">

        <!-- 스크롤뷰는 꼭 리니어레이아웃을 추가하고 시작 -->
        <LinearLayout
            android:id="@+id/layout_content"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"/>

    </androidx.core.widget.NestedScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>