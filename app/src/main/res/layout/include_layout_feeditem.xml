<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout_item_feed1"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <!-- 아이콘과 아이디 부분-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/img_icon_feed1"
            android:layout_width="80dp"
            android:layout_height="100dp"
            android:layout_marginEnd="16dp" />

        <TextView
            android:id="@+id/id_feed1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/str_lisa_id" />
    </LinearLayout>

    <!-- 피드 이미지 부분 -->
    <ImageView
        android:id="@+id/img_feed1"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:src="@drawable/lisafeed" />

    <!-- 피드설명 부분 -->
    <TextView
        android:id="@+id/feed1_textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/str_lisa_feed" />

    <!-- 코맨트 부분 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/tv_comment_id"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"/>
        <TextView
            android:id="@+id/tv_comment"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"/>
    </LinearLayout>

    <!-- 경계선 -->
    <View
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:background="#d3d3d3" />
</LinearLayout>